  <script>
    // Dark Mode
    const darkModeToggle = document.getElementById("darkModeToggle");
    const body = document.body;
    const icon = darkModeToggle.querySelector("i");
    const label = darkModeToggle.querySelector("span");

    darkModeToggle.addEventListener("click", () => {
      body.classList.toggle("dark-mode");
      if (body.classList.contains("dark-mode")) {
        icon.className = "fas fa-sun";
        label.textContent = "Light Mode";
      } else {
        icon.className = "fas fa-moon";
        label.textContent = "Dark Mode";
      }
    });

    // Tab Navigation with Single Active Tab
    const tabs = document.querySelectorAll(".sidebar-menu a");
    const sections = document.querySelectorAll(".tab-content");

    tabs.forEach(tab => {
      tab.addEventListener("click", (e) => {
        e.preventDefault();
        const targetTab = tab.dataset.tab;

        // Update active tab in sidebar
        tabs.forEach(t => t.classList.remove("active"));
        tab.classList.add("active");

        // Hide all sections and show only the target section
        sections.forEach(section => {
          section.style.display = "none";
          if (section.id === targetTab) {
            section.style.display = "block";
          }
        });

        // Lazy Load Content
        if (targetTab === "dashboards") {
          const iframe = document.getElementById("dashboardFrame");
          if (!iframe.src) {
            iframe.src = document.querySelector(".tab-btn.active").dataset.src;
          }
        }
      });
    });

    // Calculator Logic
    const calcSelect = document.getElementById("calcSelect");
    const calculators = document.querySelectorAll(".calculator");

    calcSelect.addEventListener("change", () => {
      calculators.forEach(c => c.style.display = "none");
      if (calcSelect.value) {
        document.getElementById(calcSelect.value).style.display = "block";
      }
    });

    // Calculator Functions
    ["startDate", "endDate"].forEach(id => {
      const el = document.getElementById(id);
      if (el) {
        el.addEventListener("change", () => {
          const start = new Date(document.getElementById("startDate").value);
          const end = new Date(document.getElementById("endDate").value);
          if (start && end && !isNaN(start) && !isNaN(end)) {
            const diffDays = Math.floor((end - start) / (1000 * 60 * 60 * 24));
            const diffWeeks = (diffDays / 7).toFixed(2);
            document.getElementById("dateDiffResult").innerHTML = `${diffDays} day(s) = ${diffWeeks} week(s)`;
          }
        });
      }
    });

    ["baseValue", "percentageValue"].forEach(id => {
      const el = document.getElementById(id);
      if (el) {
        el.addEventListener("input", () => {
          const b = parseFloat(document.getElementById("baseValue").value) || 0;
          const p = parseFloat(document.getElementById("percentageValue").value) || 0;
          document.getElementById("percentageResult").innerHTML = `${p}% of ${b} = ${(b * p / 100).toFixed(2)}`;
        });
      }
    });

    // German DRG
    const maxLos2 = document.getElementById("maxLos2");
    const bundesland = document.getElementById("bundesland");
    const col10 = document.getElementById("col10");
    const actualLos2 = document.getElementById("actualLos2");
    const bundeslandResult = document.getElementById("bundeslandResult");

    function updateGermanDRG() {
      const max = parseInt(maxLos2.value);
      const rate = parseFloat(bundesland.value);  // e.g., base rate per case (鈧?
      const factor = parseFloat(col10.value);     // e.g., cost weight (CW) of the case
      const actual = parseInt(actualLos2.value);

      // Validate inputs
      if ([max, rate, factor, actual].some(isNaN)) {
        bundeslandResult.innerHTML = "";
        return;
      }

      // Base payment (always applies)
      const basePayment = rate * factor;
      const ext = actual - max;

      if (ext <= 0) {
        // No excess days 鈥?only base payment
        bundeslandResult.innerHTML = `LOS within limit. Base payment: <strong>${basePayment.toFixed(2)} 鈧?/strong>`;
      } else {
        // Excess days: add supplementary payment (varies by state/model)
        const extraPayment = rate * factor * ext;  // Simplified model 鈥?confirm formula
        const totalPayment = basePayment + extraPayment;
        bundeslandResult.innerHTML = `
          Excess: ${ext} day(s). 
          Base: ${basePayment.toFixed(2)} 鈧?+ 
          Extra: ${extraPayment.toFixed(2)} 鈧?鈫?
          <strong>Total: ${totalPayment.toFixed(2)} 鈧?/strong>
        `;
      }
    }
    [maxLos2, bundesland, col10, actualLos2].forEach(i => i.addEventListener("input", updateGermanDRG));

    // Swiss DRG
    const cw = document.getElementById("cw");
    const maxLos = document.getElementById("maxLos");
    const drgRate = document.getElementById("drgRate");
    const col9 = document.getElementById("col9");
    const actualLos = document.getElementById("actualLos");
    const drgResult = document.getElementById("drgResult");

    function updateSwissDRG() {
      const c = parseFloat(cw.value);
      const m = parseInt(maxLos.value);
      const r = parseFloat(drgRate.value);
      const f = parseFloat(col9.value);
      const a = parseInt(actualLos.value);

      // Check for any invalid input
      if ([c, m, r, f, a].some(isNaN)) {
        drgResult.innerHTML = "";
        return;
      }

      // Base payment always exists: CW * DRG Rate
      const basePayment = c * r;

      const ext = a - m;

      if (ext <= 0) {
        // LOS is within limit: only base payment
        drgResult.innerHTML = `LOS within limit. Payment: <strong>${basePayment.toFixed(2)}</strong>`;
      } else {
        // LOS exceeded: add cost weight for excess days
        const comp = (ext + 1) * f;     // +1 rule? (common in some DRG models)
        const finalCW = c + comp;
        const payment = finalCW * r;
        drgResult.innerHTML = `Excess days: ${ext}. Final CW: ${finalCW.toFixed(4)} 鈫?<strong>${payment.toFixed(2)}</strong>`;
      }
    }
    [cw, maxLos, drgRate, col9, actualLos].forEach(i => i.addEventListener("input", updateSwissDRG));

    // Dashboard Tabs
    document.querySelectorAll(".tab-btn").forEach(button => {
      button.addEventListener("click", () => {
        document.querySelectorAll(".tab-btn").forEach(b => b.classList.remove("active"));
        button.classList.add("active");
        const iframe = document.getElementById("dashboardFrame");
        iframe.src = button.dataset.src;
      });
    });

    // Link Search
    document.getElementById("searchLinks").addEventListener("input", function () {
      const filter = this.value.toLowerCase();
      const links = document.querySelectorAll("#linksContainer li");
      
      links.forEach(link => {
        const text = link.textContent.toLowerCase();
        link.style.display = text.includes(filter) ? "" : "none";
      });
    });

    // Initialize: Show only home section on load
    document.addEventListener("DOMContentLoaded", function() {
      sections.forEach(section => {
        section.style.display = "none";
      });
      document.getElementById("home").style.display = "block";
    });

    // Currency Converter using Exchangerate-API
    document.getElementById("convertBtn").addEventListener("click", async () => {
      const amount = document.getElementById("amount").value;
      const from = document.getElementById("fromCurrency").value;
      const to = document.getElementById("toCurrency").value;
      const resultEl = document.getElementById("currencyResult");
      const resultAmount = document.getElementById("resultAmount");

      // Clear previous results
      resultEl.innerHTML = "";
      resultAmount.value = "";

      // Validate input
      if (!amount || isNaN(amount) || amount <= 0) {
        resultEl.innerHTML = '<div class="error-message">Please enter a valid amount</div>';
        return;
      }

      try {
        const response = await fetch(`https://api.exchangerate-api.com/v4/latest/${from}`);
        if (!response.ok) throw new Error("Failed to fetch exchange rates");
        
        const data = await response.json();
        const rate = data.rates[to];
        if (!rate) throw new Error(`Exchange rate for ${to} not available`);
        
        const converted = (amount * rate).toFixed(2);
        const timestamp = new Date(data.date).toLocaleString();

        resultAmount.value = converted;
        resultEl.innerHTML = `<div class="result">1 ${from} = ${rate.toFixed(4)} ${to}</div>
                              <div class="timestamp">Last updated: ${timestamp}</div>`;
      } catch (err) {
        resultEl.innerHTML = '<div class="error-message">Error fetching exchange rate. Please try again later.</div>';
        console.error(err);
      }
    });

    // Swap currencies
    document.getElementById("swapBtn").addEventListener("click", () => {
      const fromSelect = document.getElementById("fromCurrency");
      const toSelect = document.getElementById("toCurrency");
      
      const temp = fromSelect.value;
      fromSelect.value = toSelect.value;
      toSelect.value = temp;
    });

    // Trigger conversion on Enter key in amount field
    document.getElementById("amount").addEventListener("keyup", (e) => {
      if (e.key === "Enter") {
        document.getElementById("convertBtn").click();
      }
    });

    // Translation using Microsoft Translator API
    document.getElementById("translateBtn").addEventListener("click", async () => {
      const inputText = document.getElementById("inputText").value;
      const toLang = document.getElementById("toLanguage").value;
      const outputText = document.getElementById("outputText");
      const resultEl = document.getElementById("translationResult");

      // Clear previous results
      outputText.value = "";
      resultEl.innerHTML = "";

      if (!inputText.trim()) {
        resultEl.innerHTML = '<div class="error-message">Please enter text to translate.</div>';
        return;
      }

      try {
        // Note: In a real application, you would need to obtain an access token from Azure
        // This is a placeholder - you'll need to implement the token retrieval logic
        const response = await fetch('https://api.cognitive.microsofttranslator.com/translate?api-version=3.0&to=' + toLang, {
          method: 'POST',
          headers: {
            'Ocp-Apim-Subscription-Key': 'YOUR_MICROSOFT_TRANSLATOR_API_KEY', // Replace with your API key
            'Ocp-Apim-Subscription-Region': 'YOUR_REGION', // Replace with your region
            'Content-Type': 'application/json'
          },
          body: JSON.stringify([{'Text': inputText}])
        });

        if (!response.ok) {
          if (response.status === 401) {
            throw new Error("Invalid Microsoft Translator API key or region");
          }
          throw new Error("Translation failed");
        }

        const data = await response.json();
        const translatedText = data[0].translations[0].text;
        const detectedLanguage = data[0].detectedLanguage?.language || 'Unknown';
        
        outputText.value = translatedText;
        resultEl.innerHTML = `<div class="result">Translated successfully!</div>
                              <div class="timestamp">Detected language: ${detectedLanguage} | Translation completed at: ${new Date().toLocaleString()}</div>`;
      } catch (err) {
        resultEl.innerHTML = '<div class="error-message">Error during translation. Please check your API key and try again later.</div>';
        console.error(err);
      }
    });
  </script>
</body>
</html>
```
